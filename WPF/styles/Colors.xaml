<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--windows background-->
    <Color x:Key="colorWindowBackgroundTop">#EEEEEE</Color>
    <Color x:Key="colorWindowBackgroundBottom">#E0E0E0</Color>
    
    <!--textBox Number-->
    <Color x:Key="colorTextBoxNumberBackgroundTop">#B2EBF2</Color>
    <Color x:Key="colorTextBoxNumberBackgroundBottom">#80DEEA</Color>
    <Color x:Key="colorTextBoxNumberForeground">#E0F7FA</Color>

    <Color x:Key="colorTextBoxNumberBackgroundTopFocus">#E0F7FA</Color>
    <Color x:Key="colorTextBoxNumberBackgroundBottomFocus">#B2EBF2</Color>
    <Color x:Key="colorTextBoxNumberForegroundFocus">#E0F7FA</Color>
    <!--tetxBox Number brush-->
    <SolidColorBrush x:Key="brushTextBoxNumber" Color="{StaticResource colorTextBoxNumberForeground}"></SolidColorBrush>

